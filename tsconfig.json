{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom",
            "es2016"
        ],
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,

        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}